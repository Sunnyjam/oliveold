<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.cart.CartMapper">

    <insert id="insertCart" parameterType="com.example.cart.Cart" useGeneratedKeys="true" keyProperty="cartId">
        INSERT INTO CART (
        PRODUCTNAME,
        BOX,
        AMOUNT,
        STOCK,
        PRODUCTID,
        PRICE
        )
        VALUES (
        #{productName},
        #{box},
        #{amount},
        #{stock},
        #{productId},
        #{price}
        )
    </insert>

    <delete id="deleteCart" parameterType="int">
        DELETE FROM cart
        WHERE cartId = #{cartId}
    </delete>

    <select id="readCart" resultType="com.example.cart.Cart">
        SELECT cartId, productName, stock, amount, box
        FROM cart
    </select>

</mapper>