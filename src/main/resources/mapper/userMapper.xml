<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.user.UserMapper">

    <insert id="insertUser" parameterType="com.example.user.UserDTO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO USER ( userId,userName,userPassword,email
        )
        VALUES (
        #{userId},
        #{userName},
        #{userPw},
        #{email}
        )
    </insert>

    <delete id="deleteUser" parameterType="int">
        DELETE FROM USER
        WHERE id = #{id}
    </delete>

    <select id="readUser" resultType="com.example.user.UserDTO">
        SELECT userId, userName, userPassword, id
        FROM user
    </select>

    <select id="userIdCheck" parameterType="java.lang.String" resultType="java.lang.String">
        SELECT userId
        FROM user
        where userId = #{userId}
    </select>

    <select id="emailCheck" parameterType="java.lang.String" resultType="java.lang.String">
        SELECT email
        FROM user
        where email = #{email}
    </select>

</mapper>